{
  "compilerOptions": {
    "types": ["vitest"],
    "target": "ESNext",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "./node_modules/@types/", "./types", "./node_modules"
    ],
    "noEmit": false,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "node_modules"
  ],
  "exclude": []
}
